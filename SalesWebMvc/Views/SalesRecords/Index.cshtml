@{
    ViewData["Title"] = "Sales";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-3">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset class="d-flex flex-column gap-3">
                <legend>Simple search</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-lg-4">Min Date</label>
                    <div class="col-lg-8">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxDate" class="col-lg-4">Max Date</label>
                    <div class="col-lg-8">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-8 offset-lg-4">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset class="d-flex flex-column gap-3">
                <legend>Grouping search</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-lg-4">Min Date</label>
                    <div class="col-lg-8">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxDate" class="col-lg-4">Max Date</label>
                    <div class="col-lg-8">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-8 offset-lg-4">
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>